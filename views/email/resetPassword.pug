extends baseEmail

block content
    p Hi #{firstName},
        p Forgot your password ? Use this link #{url} to change your password.
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=url, target='_blank') Reset Password
        p If you need any help with, please don't hesitate to contact me!